<div class="aikotoba-recoveries-new">
  <%= render "aikotoba/common/message" %>
  <h1><%= I18n.t(".aikotoba.recoveries.new") %></h1>
  <%= form_with model: @account, method: :post, url: aikotoba_scoped_path(:create_recovery_token_path) do |f| %>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autocomplete: :email %>
    </p>
    <%= f.submit I18n.t(".aikotoba.recoveries.new") %>
  <% end %>
  <p>
    <%= link_to I18n.t(".aikotoba.sessions.new"), aikotoba_scoped_path(:new_session_path) %>
  </p>
</div>
