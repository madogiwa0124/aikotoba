<div class="aikotoba-accounts-new">
  <div class="message">
    <% if notice %>
      <p><%= notice %></p>
    <% end %>
    <% if alert %>
      <p><%= alert %></p>
    <% end %>
  </div>
  <h1><%= I18n.t(".aikotoba.accounts.new") %></h1>
  <%= form_with model: @account, method: :post, url: registerable_create_path do |f| %>
    <%= render "aikotoba/common/errors", resource: @account %>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, required: true %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, required: true  %>
    </p>
    <%= f.submit I18n.t(".aikotoba.accounts.new") %>
  <% end %>
  <p>
    <%= link_to I18n.t(".aikotoba.sessions.new"), sign_in_path %>
  </p>
</div>
