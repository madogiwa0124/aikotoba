<div class="aikotoba-accounts-new">
  <%= render "aikotoba/common/message" %>
  <h1><%= I18n.t(".aikotoba.accounts.new") %></h1>
  <%= form_with model: @account, method: :post, url: aikotoba_scoped_path(:create_account_path) do |f| %>
    <%= render "aikotoba/common/errors", resource: @account %>
    <p>
      <%= f.label :email %>
      <%= f.email_field :email, required: true, autocomplete: :email %>
    </p>
    <p>
      <%= f.label :password %>
      <%= f.password_field :password, required: true, autocomplete: 'new-password' %>
    </p>
    <%= f.submit I18n.t(".aikotoba.accounts.new") %>
  <% end %>
  <p>
    <%= link_to I18n.t(".aikotoba.sessions.new"), aikotoba_scoped_path(:new_session_path) %>
  </p>
</div>
