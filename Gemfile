source "https://rubygems.org"
git_source(:github) { |repo| "https://github.com/#{repo}.git" }

# Specify your gem's dependencies in aikotoba.gemspec.
gemspec

group :development do
  gem "standard"
end

group :development, :test do
  gem "sqlite3"
  gem "capybara"
  gem "webrick"
  gem "webdrivers"
end

